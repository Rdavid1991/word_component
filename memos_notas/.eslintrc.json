{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-undef": "warn",
        "no-unused-vars":"warn",
        "no-constant-condition": "warn",
        "no-prototype-builtins": 0,
        "semi" : "error",
        "semi-spacing": "error"
    }
}